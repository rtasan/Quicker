<Window x:Class="Quicker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quicker"
        xmlns:vm="clr-namespace:Quicker.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        >
    <Window.DataContext>
        <vm:MatchViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="181*"/>
        </Grid.RowDefinitions>
        <TextBox HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding CsvFilePath}" VerticalAlignment="Top" Width="515"/>
        <Button Content="参照" HorizontalAlignment="Left" Margin="551,10,0,0" VerticalAlignment="Top" Command="{Binding BrowserCommand}"/>
        <ToggleButton Content="On/Off" IsChecked="False" Command="{Binding ToggleCommand}" CommandParameter="{Binding IsChecked,RelativeSource={RelativeSource Self}}" Margin="687,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"></ToggleButton>
        <DataGrid ItemsSource="{Binding MatchList.Matches}" Margin="10,35,10,10" Grid.RowSpan="2">

        </DataGrid>
    </Grid>
</Window>
